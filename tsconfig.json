{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "useUnknownInCatchVariables": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*", "tests/**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
