{
  "name": "brook",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "dev": "nodemon",
    "test": "jest --detectOpenHandles --coverage --forceExit --runInBand",
    "clean:linux": "rm -rf dist",
    "clean:windows": "rd /q /s \"dist\" 2>nul",
    "serve-client": "serve -s build",
    "pm2start": "pm2 start dist/main.js --name brook",
    "pm2stop": "pm2 stop brook",
    "pm2restart": "pm2 restart brook",
    "pm2logs": "pm2 logs brook",
    "pm2delete": "pm2 delete brook",
    "pm2restart:prod": "pm2 restart ecosystem.config.js --env production",
    "prod:local": "npm run clean:windows && cross-env NODE_ENV=production && npm run build && npm run pm2restart:prod",
    "prod": "npm run clean:linux && cross-env NODE_ENV=production && npm run build && npm run pm2restart:prod"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.8.4",
    "multer": "^1.4.5-lts.1",
    "pm2": "^5.4.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chance": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "chance": "^1.1.12",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
