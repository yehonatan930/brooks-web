{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "src/types"],
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "useUnknownInCatchVariables": false,
    "strictNullChecks": false,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/tests/**/*", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
